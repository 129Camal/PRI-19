extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registo de Teses
            .w3-container
                form.w3-container(action='/processaForm', method='POST')
                    fieldset
                        legend Informações do Aluno
                        label.w3-text-teal
                            b Nome
                        input.w3-input.w3-border.w3-round-large.w3-light-grey(type='text', name='nome' required)
                        label.w3-text-teal
                            b Número / Identificador
                        input.w3-input.w3-border.w3-round-large.w3-light-grey(type='text', name='numero' required)
                        label.w3-text-teal
                            b Curso
                        input.w3-input.w3-border.w3-round-large.w3-light-grey(type='text', name='curso' required)
                        label.w3-text-teal
                            b Instituição
                        input.w3-input.w3-border.w3-round-large.w3-light-grey(type='text', name='instituicao' required)
                    br
                    fieldset
                        legend Informações sobre a Tese
                        label.w3-text-teal
                            b Título
                        input.w3-input.w3-border.w3-round-large.w3-light-grey(type='text', name='titulo' required)
                        label.w3-text-teal
                            b Data
                        input.w3-input.w3-border.w3-round-large.w3-light-grey(type='date', name='data' required)
                        label.w3-text-teal
                            b Tipo
                        br
                        input(type='radio', name='tipo', id='Mestrado', value='Mestrado' checked)
                        label(for='Destrado') Mestrado
                        br
                        input(type='radio', name='tipo', id='Moutoramento', value='Doutoramento')
                        label(for='Doutoramento') Doutoramento
                        br
                    br
                    input.w3-btn.w3-blue-grey(type='submit', value='Enviar')
                    
            footer.w3-container.w3-teal
                a(href='http://localhost:4006/') Home 


                